{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "outDir": "out",
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": ["ES2020", "ES2021.String"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true /* enable all strict type-checking options */,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
}
