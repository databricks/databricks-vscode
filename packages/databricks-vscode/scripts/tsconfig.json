{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2022",
        "outDir": "out",
        "esModuleInterop": true,
        "isolatedModules": false,
        "lib": ["ES2022"],
        "sourceMap": true,
        "strict": true /* enable all strict type-checking options */,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true
    }
}
